generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int @id @default(autoincrement())
  name              String
  wallet_balance    Int
  next_payment_due  DateTime @db.Date

  // relations
  tenancy_transactions TenancyTransaction[]
  perk_transactions PerkTransaction[]
}

model Perk {
  id          Int @id @default(autoincrement())
  cost        Int // in credits
  image_url   String
  title       String
  description String
  available   Boolean @default(true)

  // relations
  perk_transactions PerkTransaction[]
}

model TenancyTransaction {
  id        Int @id @default(autoincrement())
  amount    Decimal @db.Decimal(10, 2) // in Â£
  date_time DateTime @default(now())

  user_id   Int // foreign key
  user      User @relation(fields: [user_id], references: [id])
}

model PerkTransaction {
  id        Int @id @default(autoincrement())
  date_time DateTime @default(now())

  user_id   Int
  user      User @relation(fields: [user_id], references: [id])

  perk_id   Int
  perk      Perk @relation(fields: [perk_id], references: [id])
}
